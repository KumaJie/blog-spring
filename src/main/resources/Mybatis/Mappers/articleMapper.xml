<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cqut.blogspring.dao.ArticleDao">
    <insert id="uploadArticle" parameterType="Article">
        insert into article() value (#{articleId}, #{userId}, #{categoriesId}, #{articleTitle}, #{articleContent}, #{articleDate}, #{articleView}, #{articleLike})
    </insert>
    <select id="getArticle" resultType="Article">
        select * from article where article_id = #{articleId}
    </select>
</mapper>